-- How many order in January were iPhones?
SELECT COUNT(orderID) FROM BIT_DB.JanSales
WHERE product='iPhone'

--Select the customer account numbers for all the orders that were placed in February.
SELECT acctnum FROM BIT_DB.customers 
INNER JOIN BIT_DB.FebSales
ON BIT_DB.customers.order_id=BIT_DB.febsales.OrderID

--Which product was the cheapest one sold in January, and what was the price? 
SELECT DISTINCT Product, price FROM BIT_DB.JanSales
WHERE price <=(SELECT MIN(Price)FROM BIT_DB.JanSales)

--What is the total revenue for each product sold in January?
SELECT ROUND(SUM(quantity*price),2)AS Total_revenue FROM BIT_DB.JanSales

--Which products were sold in February at 548 Lincoln St, Seattle, WA 98101, how many of each were sold, and what was the total revenue?
SELECT Location,Product, Quantity,Price,quantity*Price AS Total_revenue FROM BIT_DB.FebSales 
WHERE location LIKE '548 Lincoln%';

--How many customers ordered more than 2 products at a time in February, and what was the average amount spent for those customers?
SELECT COUNT(Customers.acctnum) AS Customer_total, ROUND(AVG(Price*quantity),2) AS Average_Purchase FROM BIT_DB.FebSales
LEFT JOIN BIT_DB.customers
ON BIT_DB.Febsales.orderID=BIT_DB.Customers.order_id;
